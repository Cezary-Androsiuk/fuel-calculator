<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageButton
                        android:id="@+id/closeSettingsButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
                        app:tint="#C1DCDCDC" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Settings"
                    android:layout_weight="0.4"
                    android:textSize="26sp"
                    tools:layout_editor_absoluteY="675dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/eraseApplicationMemoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Erase Application Memory" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/exportApplicationDataButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export Application Data" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/importApplicationDataButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Application Data" />

            <LinearLayout
                android:id="@+id/textStuffLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="28dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Test Stuff"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/printPWDButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Print PWD" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/addFileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add File" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/deleteFileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete File" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 4" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NULL 6" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/fileExistStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="IDK if file exit..."/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>