<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#2C2B33"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="Add New Record"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView1"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogStartTrip"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Start Trip"
                app:icon="@drawable/start_trip_record"
                app:iconSize="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogEndTrip"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="End Trip"
                app:icon="@drawable/end_trip_record"
                app:iconSize="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogRefueling"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Refueling"
                app:icon="@drawable/refueling_record"
                app:iconSize="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogPayment"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Payment"
                app:icon="@drawable/payment_record"
                app:iconSize="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogCancelAddingRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="20dp"
                android:text="Cancel"/>

<!--            app:iconGravity="end"-->
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>